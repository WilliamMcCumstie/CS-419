{{>login-nav}}
<div class="container">
  <section name="get-code" class="wrapper-signin">
    <form class="form-signin" method="POST" action="/login/change-password">       
      <h2 class="form-signin-heading">Reset Password</h2>
      <input type="text" class="form-control" name="code" placeholder="Password Code"  autofocus="" /><!--required=""-->
      <input type="password" class="form-control" name="newpass1" placeholder="New Password"  autofocus="" /><!--required=""-->
      <input type="password" class="form-control" name="newpass2" placeholder="Confrim Password"  autofocus="" /><!--required=""-->
      <button class="btn btn-lg btn-primary btn-block" type="submit">Reset</button>
    </form>
    {{#if failed}}
    <div class="alert alert-danger" role="alert">
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
      <span class="sr-only">Error:</span>
      An error has occurred, please check the passwords match and the code is correct.
    </div>
    {{else if success}}
    <div class="alert alert-success" role="alert">
      <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
      Password updated.
    </div>
    {{/if}}
  </section>
</div>
<link rel="stylesheet" type="text/css" href="../public/login.css">