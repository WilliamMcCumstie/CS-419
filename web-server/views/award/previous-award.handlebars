{{> user-nav previous-award='true'}}
<section class='award-wrapper'>
	<h1>Previously Issued Awards</h1>
	{{#if errorMssg}}
	<b>{{errorMssg}}</b>
	{{else}}
		<table class="table">
			<thead>
				<tr>
					<th>Date Issued</th>
					<th>Time Issued</th>
					<th>Issued To</th>
					<th>Certificate Type</th>
					<th>Delete Award</th>
				</tr>
			</thead>
			<tbody>
				{{#each data}}
					<tr>
						<td>{{this.date}}</td>
						<td>{{this.time}}</td>
						<td>{{this.receiverName}}</td>
						<td>{{this.awardType}}</td>
						<td>
							<form action="/award/deleteAward" method="post">
								<input type="hidden" name="id" value="{{this.awardID}}">
								<button type="submit">Delete</button>
							</form>
						</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	{{/if}}
</section>
<link rel="stylesheet" type="text/css" href="../public/awards.css">
<script type="text/javascript" src="../public/deleteAward.js"></script>

<!-- Delete user confirmation -->
<div class="modal fade" id="deleteAward" role="dialog">
	<div class="modal-dialog">
		<div class = "modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">Ã—</button>
				<h4 class="modal-title">Delete Award</h4>
				</div>
				<div class = modal-body>
					<div class="form-group">
						<label>Are you sure you want to delete the award?</label>
					</div>							
				</div>
				<div class= "modal-footer">
					<button type="button" class = "btn btn-info btn-md" data-dismiss="modal" id="cancelDelete">Cancel </button>
					<button type="button" class = "btn btn-info btn-md" data-dismiss="modal" id="confirmDelete">Delete </button>
				</div>
		</div>
	</div>
</div>